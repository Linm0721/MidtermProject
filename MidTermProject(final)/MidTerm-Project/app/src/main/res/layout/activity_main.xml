<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    android:paddingBottom="16dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@drawable/bk1"
    android:paddingTop="16dp"

    tools:context="com.example.sam.midterm_project.MainActivity">

    <android.support.v7.widget.SearchView
        android:id="@+id/searchEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_selector"
        android:queryHint="请输入人物名称">
    </android.support.v7.widget.SearchView>

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/character_list_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchEdit"
        android:layout_marginTop="5dp" />

    <ListView
        android:id="@+id/favorlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchEdit"
        android:layout_marginTop="5dp"></ListView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/myfavor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/favor"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="src_atop"
        android:layout_marginBottom="270dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/search"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/sousuo"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="src_atop"
        android:layout_marginBottom="220dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/add"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="src_atop"
        android:layout_marginBottom="170dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/story"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/story"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="src_atop"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/game"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/pk"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="src_atop"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/totalbutton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/menu"
        app:backgroundTint="#FFFFFF"
        app:backgroundTintMode="src_atop"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>

