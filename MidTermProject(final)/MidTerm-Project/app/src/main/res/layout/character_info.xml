<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk5"

    tools:context="com.example.sam.midterm_project.InfoActivity">

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <ImageView
        android:id="@+id/photo2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/shape_photo"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/shape_photo2"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/Back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/back"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

   <!-- <ImageView
        android:id="@+id/star"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/empty_star"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/photo" />-->


    <Button
        android:id="@+id/favor"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollmore"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="加入收藏"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:background="@drawable/bk7" />

    <Button
        android:id="@+id/star"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/favor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="修改信息"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:background="@drawable/bk7" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/photo"
        android:textColor="@color/black"
        android:text="张飞"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/native_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="籍贯：xxxxxxx"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sex"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/clique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#8B0000"
        android:text="主效势力：xxxxxxx"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/native_place"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />



    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="男"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Name"
        android:layout_marginLeft="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/date"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="生卒（？-？）"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Name"

        android:layout_marginRight="90dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white" />

    <ScrollView
        android:id="@+id/scrollmore"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="10dp"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        app:layout_constraintTop_toBottomOf="@+id/clique"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
       >
    <TextView
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        android:textColor="@color/white"/>
    </ScrollView>



</android.support.constraint.ConstraintLayout>
