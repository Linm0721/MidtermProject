<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_bg7">

<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="@mipmap/vs"
    android:layout_marginTop="5dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/kapai1"
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="115dp"
        android:background="@drawable/game_touxiang1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="23dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="您的武将信息"
            android:textColor="#212121"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/view1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/p1" />

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:text="TextView"
            android:textColor="#212121"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/attack1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="45dp"
            android:text="TextView"
            android:textColor="#212121"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/name1"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/defense1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="45dp"
            android:text="TextView"
            android:textColor="#212121"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/attack1"
            app:layout_constraintStart_toStartOf="parent" />


    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/kapai2"
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:background="@drawable/game_touxiang1"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="115dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="23dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="对方武将信息"
            android:textColor="#212121"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/view2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/p1" />

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:text="TextView"
            android:textColor="#212121"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/attack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="45dp"
            android:text="TextView"
            android:textColor="#212121"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/name2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/defense2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="45dp"
            android:text="TextView"
            android:textColor="#212121"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/attack2"
            app:layout_constraintStart_toStartOf="parent" />




    </android.support.constraint.ConstraintLayout>





    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="0dp"></android.support.constraint.Guideline>

    <Button
        android:id="@+id/yes"
        android:layout_width="75dp"
        android:layout_height="52dp"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/juanzhou1"
        android:text="  战斗！"
        android:textColor="#212121"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/cancel"
        android:layout_width="75dp"
        android:layout_height="52dp"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/juanzhou1"
        android:text="  撤退！"
        android:textColor="#212121"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
 />
















</android.support.constraint.ConstraintLayout>
